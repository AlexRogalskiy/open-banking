---
apiVersion: capabilities.3scale.net/v1beta1
kind: Product
metadata:
  name: product-uk-pca-13
  namespace: "{{ obsandbox_3scale_namespace }}"
  labels:
    api: uk-pca-13
spec:
  name: Personal Current Account API
  providerAccountRef:
    name: "{{ obsandbox_3scale_tenant_provider_account_ref }}"
  systemName: product_uk_pca_13
  description: UK Open Data Personal Current Account v1.3 API
  deployment:
    apicastHosted:
      authentication:
        userkey:
          authUserKey: User-Key
          credentials: headers
  backendUsages:
    backend_uk_pca_13:
      path: /
  applicationPlans:
    freetier:
      name: "Free Tier"
      appsRequireApproval: false
      limits:
        - period: minute
          value: 60
          metricMethodRef:
            systemName: hits
  methods:
    get_pca:
      friendlyName: Get Personal Current Accounts
  mappingRules:
    - httpMethod: GET
      increment: 1
      metricMethodRef: get_pca
      pattern: /personal-current-accounts