---
apiVersion: capabilities.3scale.net/v1beta1
kind: Product
metadata:
  name: product-uk-atms-13
  namespace: "{{ obsandbox_namespace }}"
  labels:
    api: uk-atms-13
spec:
  name: ATM Locator API
  providerAccountRef:
    name: "{{ obsandbox_3scale_tenant_provider_account_ref }}"
  systemName: product_uk_atms_13
  description: UK Open Data ATM Locator v1.3 API
  deployment:
    apicastHosted:
      authentication:
        userkey:
          authUserKey: User-Key
          credentials: headers
  backendUsages:
    backend_uk_atms_13:
      path: /
  applicationPlans:
    freetier:
      name: "Free Tier"
      appsRequireApproval: false
      limits:
        - period: minute
          value: 60
          metricMethodRef:
            systemName: hits
  methods:
    get_atms:
      friendlyName: Get ATMs
    head_atms:
      friendlyName: Head ATMs
  mappingRules:
    - httpMethod: GET
      increment: 1
      metricMethodRef: get_atms
      pattern: /atms
    - httpMethod: HEAD
      increment: 1
      metricMethodRef: head_atms
      pattern: /atms
